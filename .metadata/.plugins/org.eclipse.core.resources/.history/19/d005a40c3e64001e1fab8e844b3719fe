package exam_templates;
import javax.swing.*;

public class calculadora_basic {
	public static void main(String[] args) {
		
		validar_int V=new validar_int();
		int menu,menu_sec;
		int num1=0;
		int num2=0;
		int suma=0;
		String[]tipo={"Sumar","Restar","Multiplicar","Dividir","Acabar"};
		String[]tipo1={"Ejecutar","Volver Atrás","Salir"};
		boolean validar=true;
		
		do{
			
			menu=JOptionPane.showOptionDialog(null, "�Que operaci�n desea realizar?", "Operaci�n a realizar",0, JOptionPane.QUESTION_MESSAGE,null ,tipo,tipo[0]);
			
			switch(menu){
				case 0:
