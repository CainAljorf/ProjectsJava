						menu_sec=JOptionPane.showOptionDialog(null, "Está en el programa suma.\n¿Que desea hacer?", "continuar",0, JOptionPane.QUESTION_MESSAGE,null ,tipo1,tipo1[0]);
						switch(menu_sec){
							case 0: 
								num1=V.valida_int();
								num2=V.valida_int();
								suma=num1+num2;
								JOptionPane.showMessageDialog(null,"La suma de "+num1+" y "+num2+" es "+suma+".");
								break;
							case 1: 
								validar=true;
								break;
							case 2:
								validar=false;
								break;
							default:	
								validar=false;
						}
						//Mejora: todo el bloque anterior se debe realizar con una funci�n, ya que se repite en todos los case siguientes
					}while(menu_sec==0);	//si continuar2==0 es pq el usuario ha pulsado sumar
					break;
				case 1:
					do{
						//funcion que recoge 2 nums, realiza e imprime la resta
						
						menu_sec=JOptionPane.showOptionDialog(null, "�Que desea hacer?", "continuar",0, JOptionPane.QUESTION_MESSAGE,null ,tipo1,tipo1[0]);
						switch(menu_sec){
							case 1:
								validar=true;
								break;
							case 2:
								validar=false;
								break;
							default:	
								validar=false;
						}
					}while(menu_sec==0);	
					break;
				case 2:
					do{
						//funcion que recoge 2 nums, realiza e imprime la mult
						
						menu_sec=JOptionPane.showOptionDialog(null, "�Que desea hacer?", "continuar",0, JOptionPane.QUESTION_MESSAGE,null ,tipo1,tipo1[0]);
						switch(menu_sec){
							case 1:
								validar=true;
								break;
							case 2:
								validar=false;
								break;
							default:	
								validar=false;
						}
					}while(menu_sec==0);	
					break;
				case 3:
					do{
						//funcion que recoge 2 nums, realiza e imprime la divisi�n
						
						menu_sec=JOptionPane.showOptionDialog(null, "�Que desea hacer?", "continuar",0, JOptionPane.QUESTION_MESSAGE,null ,tipo1,tipo1[0]);
						switch(menu_sec){
							case 1:
								validar=true;
								break;
							case 2:
								validar=false;
								break;
							default:	
								validar=false;
						}
					}while(menu_sec==0);	
