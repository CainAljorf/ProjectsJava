package exam_templates;

import javax.swing.JOptionPane;

public class case_menu {
	public void Case (String[]tipo,String []tipo1) {
		int num1,num2,suma;
		int menu_sec;
		validar_int V=new validar_int();
		boolean validar=true;
		do{

			menu_sec=JOptionPane.showOptionDialog(null, "Está en el programa suma.\n¿Que desea hacer?", "Información",0, JOptionPane.QUESTION_MESSAGE,null ,tipo1,tipo1[0]);
			{switch(menu_sec){
				case 0:
					num1=V.valida_int();
					num2=V.valida_int();
					suma=num1+num2;
					JOptionPane.showMessageDialog(null,"La suma de "+num1+" y "+num2+" es "+suma+".");
					break;
				case 1:
					validar=true;
					break;
				case 2:
					validar=false;
					break;
				default:	
					validar=false;
			}
		}while(menu_sec==0);	
		
	}
}




