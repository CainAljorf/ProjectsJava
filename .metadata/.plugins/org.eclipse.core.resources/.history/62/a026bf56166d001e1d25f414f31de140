package Ejercicios_Martes;
import javax.swing.JOptionPane;

import library_functions_Cain.validators;
public class doubles_v2 {
	public static void N_primeros_Digi_Multiplo_media(){
		int cont=0;
		int num=0;
		int prod=1;
		String cad="";
		while(cont<5) {
			num=validators_v2.validator_int("Introduce un número: ","Introducir número");
			for(int i=1;i<=num;i++) {
				if((num%i)==0) {
					cad_div=cad_div+"\n"+i;
				}//end if
			}//end for
			cad= "Los divisores de "+num+" son: ";
			JOptionPane.showMessageDialog(null, cad+cad_div);
			if((num%3)==0) {
				prod=prod*num;
				cont++;
			}//end if
		}//end while
		cad="El producto del los 3 primeros números impares es: "+prod+". \n";
		JOptionPane.showMessageDialog(null, cad,"Resultado",JOptionPane.INFORMATION_MESSAGE);
	
	}//end N_primeros_Digi_Multiplo_media
	public static void N_num_Div_Impar_Media(){
		int num1=0;
		int num2=0;
		int suma=0;
		int cont=0;
		String cad="";
		num1=validators_v2.validator_int("Introduce un número: ","Introducir número");
		for(int i=1;i<=num1;i++) {
			num2=validators_v2.validator_int("Introduce un número: ","Introducir número");
			for(int j=1;j<=num2;j++) {
				if((num2%j)==1) {
					suma+=num2;
					cont++;
				}//end if
			}//end for
			cad="La media de los divisiores que tienen 3 números impares es "+suma/cont;
		}//end for
		JOptionPane.showMessageDialog(null, cad,"Resultado",JOptionPane.INFORMATION_MESSAGE);
	}//end N_num_Div_Impar_Media
}//end class doubles